<h1>Articles</h1>
<p>Find me in app/views/articles/index.html.erb</p>

<ul>
  <% @articles.each do |article| %>
    <li>
      <h1><%= link_to article.title, article_path(article.id) %></h1><%= link_to '[ X ]', article_path(article), method: :delete %>
      <p><%= article.content %></p>
    </li>
  <% end %>
</ul>

<%= link_to 'Create a new article', new_article_path %>
